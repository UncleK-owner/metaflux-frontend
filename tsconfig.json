{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@domain/*": [
        "src/domain/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@application/*": [
        "src/application/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@layouts/*": [
        "src/presentation/layouts/*"
      ],
      "@pages/*": [
        "src/presentation/pages/*"
      ],
      "@components/*": [
        "src/presentation/components/*"
      ],
      "@theme/*": [
        "src/presentation/theme/*"
      ]
    }
  },
  "include": [
    "src",
    "src/presentation/theme"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}